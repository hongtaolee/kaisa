
<div class="min-nav">
	<div class="img"></div>当前位置：
	<a href="/" title="">首页</a>&gt;&gt;
	<a href="/tour_categories/<%=@tour_category.id %>" title=""><%=@tour_category.name %></a>&gt;&gt;
</div>

<div id="content" class="show-content">
	<div class="aside">
    <% @page.blocks.each do |block|%>
    <%=raw block.content %>
    <% end if !@page.blank? %>
	</div>
	<div class="main list-main">
			<div class="item">
				<div class="title">
					<div class="txt"><%=@tour_category.name %></div>
					<div class="right"><a href="/tour_categories/<%=@tour_category.id %>" title="" class="more"></a></div>
				</div>
				<div class="content">
					<ul class="link-list">
            <% @tours.each do |tour|%>
						<li>
							<a href="/tours/<%=tour.id %>" title=""><%=tour.name %><span class="red"><%='【热门】' if tour.is_hot %><%='【推荐】' if tour.is_recommend %></span></a>
							<span class="time"><%=tour.typee %></span>
							<span class="price">￥<%=tour.price %></span>
						</li>
            <% end %>
					</ul>
				</div>
			</div>
	</div>
</div>